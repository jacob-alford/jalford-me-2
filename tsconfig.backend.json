{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es2020",
    "baseUrl": "src",
    "resolveJsonModule": true,
    "declaration": true,
    "removeComments": true,
    "allowSyntheticDefaultImports": true,
    "sourceMap": true,
    "outDir": "dist",
    "strictNullChecks": true
  },
  "include": ["src/back-end/**/*.ts"],
  "lib": ["es2020"]
}
